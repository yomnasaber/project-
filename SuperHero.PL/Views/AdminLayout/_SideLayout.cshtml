@*@model List<PersonVM>*@
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Person> signInManager


<nav>
    <div class="logo-name">
        <div class="logo-image">
            <img src="~/dashboard/images/flash.svg" />
        </div>

        <span class="logo_name">Super Heroes</span>
      
       @if (signInManager.IsSignedIn(User))
        {

            var userinfo = await signInManager.UserManager.FindByNameAsync(User.Identity.Name);
            <a asp-action="Profile" asp-controller="Profile" asp-route-id="@userinfo.Id">
            @if (@userinfo.Image == null)
            {
                if (@userinfo.gender == 0)
                {
                    <div class="Image" style="background-image:url('/files/imgs/men.jpg') ; ">
                    </div>

                }
                else
                {
                    <div class="Image" style="background-image:url('/files/imgs/young-woman-avatar-cartoon-character-profile-picture-young-woman-wearing-blue-t-shirt-avatar-cartoon-character-vector-149732076.jpg') ">
                    </div>

                }
            }
            else
            {
                <div class="Image" style="background-image:url('/files/imgs/@userinfo.Image') ">
                </div>
            }


            </a>
            <div  class=" c ">
                <span class="font-weight-bold">@userinfo.FullName</span>
            </div>
          
        }
  
    </div>

    <div style="margin-top:20px" class="menu-items">
        <ul class="nav-links" style="padding-left:0px">

            <li >
                <a active-when="Person" asp-action="GetAll" asp-controller="Person">
                    <i class="uil uil-user-circle"></i>
                    <span class="link-name">@SharedLocalizer["Person"]</span>
                </a>
                
            </li>
  
            <li  data-bs-toggle="dropdown" aria-expanded="false">
                <a asp-controller="Categories" active-when="Categories">
                    <i class="uil uil-files-landscapes icon"></i>
                    <span class="link-name">@SharedLocalizer["Courses"]</span>
                </a>
                
            </li>
               <ul class="nav-links dropdown-menu" aria-labelledby="dropdownMenuLink" style="padding-left:0px;z-index:12939494">

                <li><a active-when="Categories" class="dropdown-item" asp-action="GetAll" asp-controller="Categories"><i class="uil uil-servers"></i>@SharedLocalizer["Category"]</a></li>
                <li><a active-when="Course" class="dropdown-item" asp-action="GetAll" asp-controller="Course"><i class="uil uil-presentation-edit"></i>@SharedLocalizer["Course"]</a></li>
                <li><a active-when="Lesson" class="dropdown-item" asp-action="GetAll" asp-controller="Lesson"><i class="uil uil-layer-group"></i>@SharedLocalizer["Lesson"]</a></li>

                </ul>
            <li >
                <a active-when="Post" asp-action="GetAll" asp-controller="Post">
                    <i class="uil uil-search"></i>
