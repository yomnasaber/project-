            </li>
            <li>
                <a active-when="Group" asp-action="GetAll" asp-controller="Group">
                    <i class="uil uil-users-alt"></i>
                    <span class="link-name">@SharedLocalizer["Group"]</span>
                </a>
            </li>
          @*  <ul class="nav-links dropdown-menu" aria-labelledby="dropdownMenuLink" style="padding-left:0px">

                <li><a class="dropdown-item" asp-action="GetAll" asp-controller="Categories"><i class="uil uil-globe"></i>District</a></li>
                <li><a class="dropdown-item" asp-action="GetAll" asp-controller="Course"><i class="uil uil-presentation-edit"></i>City</a></li>
                <li><a class="dropdown-item" asp-action="GetAll" asp-controller="Lesson"><i class="uil uil-layer-group"></i>Governorate</a></li>

            </ul>*@
            <li>
                <a asp-action="GetAll" asp-controller="Roles">
                    <i class="uil uil-chart icon"></i>
                    <span class="link-name">@SharedLocalizer["Roles"]</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="uil uil-thumbs-up icon"></i>
                    <span class="link-name">@SharedLocalizer["Like"]</span>
                </a>
            </li>
            <li>
                <a asp-action="Course" asp-controller="CourseView">
                    <i class="uil uil-comments icon"></i>
                    <span class="link-name">@SharedLocalizer["Course"]</span>
                </a>
            </li>
            <li>
                <a asp-action="GetAll" asp-controller="City">
                    <i class="uil uil-globe"></i>
                    <span class="link-name">@SharedLocalizer["Adress"]</span>
                </a>
            </li>
