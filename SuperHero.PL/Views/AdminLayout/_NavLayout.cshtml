@{
    var Culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
}


@if (Culture == "ar-EG")
{
    <link href="~/Ar.css" rel="stylesheet" />
}
else
{
    <link href="~/En.css" rel="stylesheet" />
}
@*@model List<PersonVM>*@
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Person> signInManager
 @{var userinfo = await signInManager.UserManager.FindByNameAsync(User.Identity.Name);}
<div class="top">
    <i class="uil uil-bars sidebar-toggle"></i>
@*
    <div style="display:block" class="search-box">
        <i class="uil uil-search"></i>
        <input type="text" placeholder="Search here..." />
    </div>*@


    <div class="dropdown show">
     
        <div @*class="dropdown show"*@>
            <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
       @if (signInManager.IsSignedIn(User))
        {

           
            @if (@userinfo.Image == null)
            {
                if (@userinfo.gender == 0)
                {
                  <img src="/files/imgs/men.jpg" alt="" />
                }
                else
                {

                   <img src="/files/imgs/young-woman-avatar-cartoon-character-profile-picture-young-woman-wearing-blue-t-shirt-avatar-cartoon-character-vector-149732076.jpg" alt="" />
                }
            }
            else
            {

                        <img src="/files/imgs/@userinfo.Image" style="width:60px;height:60px" alt="" />
            }
        }
            </a>

            <div class="dropdown-menu mt-3 " aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item ancor" href="#">
                    <i class="uil uil-user"></i>
                    Profile
                </a>
                <a class="dropdown-item" href="#">
                    <i class="uil uil-edit"></i>
                    Edit
                </a>
                <a class="dropdown-item"  asp-controller="Account" asp-action="LogOff" asp-route-id="@userinfo.Id">
                    <i class="uil uil-signout"></i>Logout
                </a>

                @if (Culture == "ar-EG")
                {
                    <li>
                        <a class="dropdown-item d-flex justify-content-between"
                           href="@Url.Action("SetLanguage", "Language", new {
                                                              culture = "en-US",
                                                              returnUrl = Context.Request.Path + Context.Request.QueryString
                                                          })">

                            <span> <img src="/Dashboard/Images/usa.png" width="50" height="50" /> &nbsp; @SharedLocalizer["English"]</span>
                        </a>
                    </li>
                }
                else 
                {
                    <li>
                        <a class="dropdown-item d-flex justify-content-between"
                           href="@Url.Action("SetLanguage", "Language", new {
                                                              culture = "ar-EG",
                                                              returnUrl = Context.Request.Path + Context.Request.QueryString
                                                          })">

                            <span><img src="/Dashboard/Images/Egypt.png" width="50" height="50" /> &nbsp;@SharedLocalizer["Arabic"]</span>
                        </a>
                    </li>
                }

            </div>
        </div>
